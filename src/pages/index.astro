---
import MainLayout from '../layouts/MainLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import { Image } from 'astro:assets';
import backgroundImage from '../assets/images/background-homepage.webp';
---

<MainLayout title="Fit Mom Chloe - Fitness & Nutrition for Moms">
  <HeroSection />

  <!-- Programs Section -->
  <section class="relative py-20">
    <!-- Background Image Container -->
    <div class="absolute inset-x-0 top-1/2 -translate-y-1/2 h-[120%] bg-primary/5 overflow-hidden">
      <Image
        src={backgroundImage}
        alt=""
        class="w-full h-full object-cover opacity-25 md:object-center object-left"
      />
    </div>

    <div class="section-container relative z-10">
      <h2 class="font-playfair text-4xl text-center mb-8 md:mb-16">What I Offer</h2>
      <div class="grid md:grid-cols-3 gap-4 md:gap-8 px-4 md:px-0">
        <div class="bg-white/40 md:bg-white/70 backdrop-blur-sm md:backdrop-blur p-6 md:p-8 rounded-lg text-center shadow-xl hover:shadow-2xl transition-all transform hover:-translate-y-1">
          <h3 class="font-playfair text-xl md:text-2xl mb-3 md:mb-4">Personal Training</h3>
          <p class="mb-6 text-sm md:text-base">Personalized 1-on-1 training sessions tailored to your goals</p>
          <a href="/book" class="btn-primary">Book Now</a>
        </div>
        <div class="bg-white/40 md:bg-white/70 backdrop-blur-sm md:backdrop-blur p-6 md:p-8 rounded-lg text-center shadow-xl hover:shadow-2xl transition-all transform hover:-translate-y-1">
          <h3 class="font-playfair text-xl md:text-2xl mb-3 md:mb-4">Workout Videos</h3>
          <p class="mb-6 text-sm md:text-base">Access to premium workout content and training programs</p>
          <a href="/workouts" class="btn-primary">View Library</a>
        </div>
        <div class="bg-white/40 md:bg-white/70 backdrop-blur-sm md:backdrop-blur p-6 md:p-8 rounded-lg text-center shadow-xl hover:shadow-2xl transition-all transform hover:-translate-y-1">
          <h3 class="font-playfair text-xl md:text-2xl mb-3 md:mb-4">Meal Plans</h3>
          <p class="mb-6 text-sm md:text-base">Customized nutrition plans to support your fitness journey</p>
          <a href="/meal-plans" class="btn-primary">Learn More</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Instagram Feed Section -->
  <section class="bg-[#F7F2F0]">
    <h2 class="font-playfair text-4xl text-center pt-32 pb-8">Follow My Journey</h2>
    <div 
      class="elfsight-app-bc1ab87c-9801-4a3d-b414-c409d1543e51" 
      data-elfsight-app-lazy
    ></div>
  </section>
</MainLayout> 